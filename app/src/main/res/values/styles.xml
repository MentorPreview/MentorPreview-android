<resources>

    <!-- ############# Base Theme ############# -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ############# Text Theme ############# -->
    <style name="TextDisplay4" parent="@style/TextAppearance.AppCompat.Display4">
        <item name="android:textSize">@dimen/text_display_4</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextDisplay3" parent="@style/TextAppearance.AppCompat.Display3">
        <item name="android:textSize">@dimen/text_display_3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextDisplay2" parent="@style/TextAppearance.AppCompat.Display2">
        <item name="android:textSize">@dimen/text_display_2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextDisplay1" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/text_display_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextHeadLine" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextSubHeading" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_sub_heading</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextBody2" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextBody1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextCaption" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextMenu" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextButton" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>
